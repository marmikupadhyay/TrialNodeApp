<section class="sec-1 row">
  <%- include('./partials/sideBar.ejs'); %>
  <div class="col-9 bg-light pl-0">
    <div class="jumbotron p-3 mb-0">
      <h1 class="display-2">Matches You Have Selected</h1>
    </div>
    <div class="match-container">
      <% for(var matchuser of matches){%>
      <%if(user.matches.includes(matchuser._id)) { %> <%-
      include('./partials/personCard.ejs',{matchuser,flag:user.matches.includes(matchuser._id),
      flag2:false}); %> <%}%><%}%>
    </div>
    <div class="jumbotron p-3 mb-0">
      <h1 class="display-2">Matches Confirmed</h1>
    </div>
    <div class="match-container">
      <% for(var matchuser of matches){%>
      <%if(user.matches.includes(matchuser._id)&&matchuser.matches.includes(user._id))
      { %> <%-
      include('./partials/personCard.ejs',{matchuser,flag:user.matches.includes(matchuser._id),
      flag2:user.matches.includes(matchuser._id)&&matchuser.matches.includes(user._id)});
      %> <% } %> <% } %>
    </div>
  </div>
</section>
