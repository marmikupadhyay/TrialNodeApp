<link rel="stylesheet" href="/css/profile.css" />

<nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top">
  <ul>
    <li class="left"><a href="/dashboard">Home</a></li>
    <li class="left"><a href="/users/editProfile">Profile</a></li>
    <li class="left"><a href="/users/matches">Match-Made</a></li>
    <li class="right"><a href="/users/logout">Logout</a></li>
  </ul>
